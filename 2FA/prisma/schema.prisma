generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  otp        String?  // store plain OTP for short time (or store hashed if you prefer)
  otpExpires DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
